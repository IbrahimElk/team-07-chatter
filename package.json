{
  "name": "chatter",
  "version": "1.0.0",
  "description": "P&O CW 2022-2023 chatter",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "Server": "ts-node-esm ./src/server/main.ts",
    "Client": "ts-node-esm ./src/client-dispatcher/main.ts",
    "build": "tsc --build tsconfig-build.json -v && npm run copy-files",
    "clean": "tsc --build tsconfig-build.json --clean",
    "test": "vitest run",
    "test-watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint-fix": "eslint -fix",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css build/"
  },
  "author": "P&O CW 2022-2023",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "1.0.1",
    "@types/bootstrap": "5.2.6",
    "@types/debug": "4.1.7",
    "@types/node": "18.11.4",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "@vitest/coverage-c8": "0.24.3",
    "copyfiles": "2.4.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "vitest": "0.24.3"
  },
  "dependencies": {
    "@types/jsdom": "21.1.0",
    "bootstrap": "5.2.3",
    "debug": "4.3.4",
    "jsdom": "21.1.1",
    "serverline": "1.6.0",
    "three": "0.150.1",
    "ws": "8.9.0",
    "zod": "3.19.1"
  }
}
