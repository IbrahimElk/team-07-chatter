{
  "name": "chatter",
  "version": "1.0.0",
  "description": "P&O CW 2022-2023 chatter",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "server": "ts-node-esm ./src/server/main.ts",
    "build": "tsc --build tsconfig-build.json -v && npm run copy-files && npm run copy-lib",
    "clean": "tsc --build tsconfig-build.json --clean",
    "test": "vitest run src/",
    "test-watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint-fix": "eslint -fix",
    "copy-files": "copyfiles -u 1 src/front-end/**/*.{html,css,png,jpg,jpeg,gltf,bin,svg} build/",
    "copy-lib": "copyfiles -u 1 build/lib/* build/front-end/",
    "html": "npm run build && npx http-server -c-1 -S -C cert.pem -K key.pem -p 3000 build/front-end/",
    "keystrokes": "ts-node-esm ./src/keystroke-fingerprinting/main.ts"
  },
  "author": "P&O CW 2022-2023",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "1.0.1",
    "@types/debug": "4.1.7",
    "@types/jquery": "3.5.16",
    "@types/jsdom": "21.1.0",
    "@types/node": "18.11.4",
    "@types/readline-sync": "1.4.4",
    "@types/three": "0.149.0",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "@vitest/coverage-c8": "0.24.3",
    "copyfiles": "2.4.1",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "jsdom": "21.1.1",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "vitest": "0.24.3"
  },
  "dependencies": {
    "debug": "4.3.4",
    "fs": "0.0.1-security",
    "jquery": "3.6.4",
    "readline": "1.3.0",
    "readline-sync": "1.4.10",
    "serverline": "1.6.0",
    "three": "0.150.1",
    "ws": "8.9.0",
    "zod": "3.19.1"
  }
}
